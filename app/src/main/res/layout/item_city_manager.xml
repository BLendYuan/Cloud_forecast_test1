<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_city_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_city_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="北京"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_city_tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="12℃"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/item_city_tv_line1"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:layout_below="@+id/item_city_tv_temp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#8080A8"/>

            <TextView
                android:id="@+id/item_city_tv_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_city_tv_line1"
                android:text="天气：晴"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/item_city_tv_line2"
                android:layout_width="2.5dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/item_city_tv_condition"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#8080A8"
                android:layout_below="@+id/item_city_tv_line1"/>
            <TextView
                android:id="@+id/item_city_tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/item_city_tv_line2"
                android:layout_below="@+id/item_city_tv_line1"
                android:text="东北风3级"/>
            <TextView
                android:id="@+id/item_city_tv_temprange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_city_tv_line1"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:text="16~9℃"
                android:layout_marginRight="20dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>