<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg5"
    tools:context=".CityWeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/frag_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/frag_tv_t1temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3℃"
                android:textSize="35sp"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_tv_city"
                android:text="北京"
                android:layout_below="@+id/frag_tv_t1temp"/>
            <TextView
                style="@style/todytext"
                android:id="@+id/frag_condition"
                android:text="晴"
                android:layout_below="@id/frag_tv_city"/>
            <TextView
                style="@style/todytext"
                android:id="@+id/frag_date"
                android:text="2019-11-24"
                android:layout_marginTop="20dp"
                android:layout_below="@id/frag_condition"/>
            <TextView
                android:id="@+id/frag_wind"
                android:text="东北风3~4级"
                style="@style/todytext"
                android:layout_below="@id/frag_date"/>
            <TextView
                android:id="@+id/frag_linel"
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/frag_wind"
                android:background="#005050"
                android:layout_alignBottom="@id/frag_wind"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                style="@style/todytext"
                android:id="@+id/frag_temprature"
                android:text="9~-1℃"
                android:layout_toRightOf="@id/frag_linel"
                android:layout_alignBottom="@id/frag_wind"/>

            <ImageView
                android:id="@+id/frag_today"
                android:layout_width="110dp"
                android:layout_height="111dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon" />


        </RelativeLayout>
<!-- 未来几天的天气情况       -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frag_center_layout"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/freg_bg">
        </LinearLayout>
        <!--            用于表示指数信息的线性布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frag_indexlayout"
            android:orientation="vertical"
            android:background="@drawable/freg_bg"
            android:layout_margin="10dp"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/indextext"
                    android:id="@+id/frag_dress"
                    android:text="穿衣服指数"
                    android:drawableBottom="@mipmap/icon_cloth"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#3E9B57"/>
                <TextView
                    style="@style/indextext"
                    android:id="@+id/frag_washcar"
                    android:text="洗车指数"
                    android:drawableBottom="@mipmap/icon_car"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#3E9B57"/>
                <TextView
                    style="@style/indextext"
                    android:id="@+id/frag_colding"
                    android:text="感冒指数"
                    android:drawableBottom="@mipmap/icon_ganmao"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3E9B57"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/indextext"
                        android:id="@+id/frag_sports"
                        android:text="运动指数"
                        android:drawableBottom="@mipmap/icon_sport"/>
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#3E9B57"/>
                    <TextView
                        style="@style/indextext"
                        android:id="@+id/frag_rays"
                        android:text="紫外线指数"
                        android:drawableBottom="@mipmap/icon_light"/>
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#3E9B57"/>
                    <TextView
                        style="@style/indextext"
                        />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>